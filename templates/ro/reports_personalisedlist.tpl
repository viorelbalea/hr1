<script type="text/javascript" src="./js/jquery-1.3.2.min.js"></script><script type="text/javascript" src="./js/jquery.coolMultiple.js"></script><link href="images/style.css" rel="stylesheet" type="text/css"><form action="./?m=reports&o=personalisedlist&rep={$smarty.get.rep}" name="frm_reports_personalisedlist" method="post"      onsubmit="setTimeout('refresh_opener()',1); setTimeout('window.close()',5); return true;">    <table width="100%" cellspacing="0" cellpadding="0" height="30" class="search">        {foreach from=$list_fields_order key=key item=item name=tmp}            {assign var="position" value=$item.position}            {assign var="field_id" value=$item.field_id}            {assign var="up_pos" value=$position+1}            {assign var="down_pos" value=$position-1}            {assign var="next_field_id" value=$key+1}            {assign var="prev_field_id" value=$key-1}            <tr>                <td><input type="checkbox" name="field_visible[{$key}]" {if !empty($item.visible)} checked="checked" {/if} value="1"/>                    {if !$smarty.foreach.tmp.first}<a                        href="./?m=reports&o=personalisedlist&rep={$smarty.get.rep}&field_id={$key}&prev_field_id={$prev_field_id}&curr_pos={$position}&move={$down_pos}"><img                                src="./images/s_asc.png" border="0"></a>{else}&nbsp;&nbsp;&nbsp;{/if}                    {if !$smarty.foreach.tmp.last}<a                        href="./?m=reports&o=personalisedlist&rep={$smarty.get.rep}&field_id={$key}&next_field_id={$next_field_id}&curr_pos={$position}&move={$up_pos}"><img                                src="./images/s_desc.png" border="0"></a>{/if}</td>                <!--<td>{$item.position}</td>-->                <td>{$list_fields_names.$field_id.label}</td>            </tr>        {/foreach}    </table>    <br/>    <input type="submit" name="personal" value="{translate label='Salveaza'}" class="cod"></form><script type="text/javascript">    function refresh_opener() {ldelim}        window.opener.document.location.reload();        {rdelim}</script>